{
	// Visual
	"window.autoDetectColorScheme": true,
	"workbench.preferredDarkColorTheme": "Catppuccin Mocha",
	"workbench.preferredLightColorTheme": "Catppuccin Frapp√©",
	"workbench.iconTheme": "catppuccin-mocha",
	"workbench.tree.indent": 8,

	// Editor
	"editor.inlineSuggest.enabled": true,
	"editor.fontFamily": "JetbrainsMono Nerd Font Mono, SpaceMono Nerd Font, Geist Mono, Dank Mono, SF Mono, Zed Mono, Zed Sans, Iosevka, monospace",
	"editor.lineNumbers": "relative",
	"editor.fontSize": 16,
	"editor.fontWeight": "500",
	"editor.lineHeight": 1.3,
	"editor.guides.bracketPairs": true,
	"editor.guides.indentation": true,
	"editor.formatOnSave": false,
	"editor.fontLigatures": true,
	"editor.linkedEditing": true,
	"editor.renderLineHighlight": "all",
	"editor.renderWhitespace": "all",
	"editor.renderControlCharacters": true,
	"editor.cursorSmoothCaretAnimation": "on",
	"explorer.confirmDelete": false,
	"editor.minimap.enabled": false,
	"search.exclude": {
		"**/.git": true,
		"**/.github": true,
		"**/.nuxt": true,
		"**/.next": true,
		"**/.output": true,
		"**/.pnpm": true,
		"**/.vscode": true,
		"**/.yarn": true,
		"**/bower_components": true,
		"**/dist/**": true,
		"**/logs": true,
		"**/node_modules": true,
		"**/out/**": true,
		"**/package-lock.json": true,
		"**/pnpm-lock.yaml": true,
		"**/tmp": true,
		"**/yarn.lock": true
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[python]": {
		"editor.formatOnType": true,
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"[rust]": {
		"editor.defaultFormatter": "statiolake.vscode-rustfmt"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"prettier": {
		"arrowParens": "avoid",
		"singleQuote": true,
		"trailingComma": "all",
		"semi": true,
		"tabWidth": 2,
		"useTabs": true,
		"endOfLine": "lf",
		"printWidth": 120
	},
	"prettier.bracketSameLine": true,
	"files.exclude": {
		".next": true,
		"node_modules": true,
		".nuxt": true,
		".vscode": false,
		".yarn": true,
		".angular": true,
		"dist": false
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"explorer.confirmDragAndDrop": false,
	"git.confirmSync": false,
	"window.nativeTabs": true,

	// Terminal
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.fontWeight": "200",
	"terminal.integrated.persistentSessionReviveProcess": "never",
	"terminal.integrated.tabs.enabled": true,
	"terminal.integrated.fontFamily": "JetbrainsMono Nerd Font Mono",
	"terminal.integrated.fontSize": 13,

	// Eslint
	"eslint.codeAction.showDocumentation": {
		"enable": true
	},
	"eslint.quiet": true,
	"eslint.validate": ["javascript", "typescript", "javascriptreact", "typescriptreact", "vue", "html"],

	// Others
	"codestats.apikey": "",
	"codestats.username": "",
	"window.openFilesInNewWindow": "on",
	"window.openFoldersInNewWindow": "on",
	"svelte.enable-ts-plugin": true,
	"terminal.integrated.enableMultiLinePasteWarning": false,
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"[scss]": {
		"editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
	},
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"workbench.startupEditor": "none",
	"zig.zls.path": "/Users/ismiabbas/Library/Application Support/Code/User/globalStorage/ziglang.vscode-zig/zls_install/zls",
	"editor.accessibilitySupport": "off",
	"php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
	"[php]": {
		"editor.defaultFormatter": "junstyle.php-cs-fixer"
	},
	"php-cs-fixer.lastDownload": 1697786661611,
	"git.openRepositoryInParentFolders": "never",
	"files.associations": {
		"*.csproj": "dotnetProject"
	},
	"[dockerfile]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-docker"
	},
	"redhat.telemetry.enabled": true,
	"diffEditor.ignoreTrimWhitespace": false,
	"tabnine.experimentalAutoImports": true,
	"go.toolsManagement.autoUpdate": true,
	"[nginx]": {
		"editor.defaultFormatter": "raynigon.nginx-formatter"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"workbench.colorTheme": "Catppuccin Mocha",
	"editor.stickyScroll.enabled": true,
	"haskell.manageHLS": "GHCup",
	"workbench.sideBar.location": "right"
}
